<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgg"
    tools:context=".TipsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/dbprofile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello!"
                    android:textSize="30sp"
                    android:layout_gravity="left"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/hello"
                    android:drawablePadding="10dp"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Farm Fresh LK"
                    android:layout_gravity="left"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp" />



            </LinearLayout>

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Farm Fresh LK Guidelines and Tips"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp" />

            <!-- Tips Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:padding="10dp">

                <!-- Tip 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    android:backgroundTint="#A981C784"
                    android:layout_margin="8dp"
                    android:padding="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:orientation="vertical"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Maximize Your Sales"
                            android:textSize="25sp"
                            android:textColor="@color/white"
                            android:drawableEnd="@drawable/compost"
                            android:drawablePadding="20dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="• Update your inventory daily before 6 AM for best visibility.\n• Add clear photos of your produce taken in natural light.\n• Set competitive prices by checking market rates.\n• Offer bulk discounts for restaurant orders."
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:layout_marginTop="10dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Tip 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    android:backgroundTint="#A981C784"
                    android:layout_margin="8dp"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:orientation="vertical"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Planning Your Harvests"
                            android:textSize="25sp"
                            android:textColor="@color/white"
                            android:drawableEnd="@drawable/compost"
                            android:drawablePadding="20dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="• Post upcoming harvest schedules 2-3 weeks in advance.\n• Enable pre-orders for regular customers.\n• Plan crop rotation based on seasonal demand.\n• Maintain a diverse crop portfolio."
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:layout_marginTop="10dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Tip 3 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    android:backgroundTint="#A981C784"
                    android:layout_margin="8dp"
                    android:padding="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:orientation="vertical"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Building Customer Relations"
                            android:textSize="25sp"
                            android:textColor="@color/white"
                            android:drawableEnd="@drawable/compost"
                            android:drawablePadding="20dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="• Respond to customer inquiries within 2 hours.\n• Share your farming story and practices.\n• Offer growing tips for your produce.\n• Create subscription box options."
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:layout_marginTop="10dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
